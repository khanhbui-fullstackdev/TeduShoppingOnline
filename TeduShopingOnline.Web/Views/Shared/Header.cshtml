@using Microsoft.AspNet.Identity;


<!--Starting header-->
<div class="header">
    <div class="top-header">
        <div class="container">
            <div class="top-header-left">
                <ul class="support">
                    <li><a href="#"><label> </label></a></li>
                    <li><a href="#">24x7 live<span class="live"> support</span></a></li>
                </ul>
                <ul class="support">
                    <li class="van"><a href="#"><label> </label></a></li>
                    <li><a href="#">Free shipping <span class="live">on order over 500</span></a></li>
                </ul>
                <div class="clearfix"> </div>
            </div>
            <div class="top-header-right">
                <div class="down-top">
                    <select class="in-drop">
                        <option value="English" class="in-of">English</option>
                        <option value="Japanese" class="in-of">Japanese</option>
                        <option value="French" class="in-of">French</option>
                        <option value="German" class="in-of">German</option>
                    </select>
                </div>
                <div class="down-top top-down">
                    <select class="in-drop">

                        <option value="Dollar" class="in-of">Dollar</option>
                        <option value="Yen" class="in-of">Yen</option>
                        <option value="Euro" class="in-of">Euro</option>
                    </select>
                </div>
                <!---->
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="bottom-header">
        <div class="container">
            <div class="header-bottom-left">
                <div class="logo">
                    <a href="/"><img src="~/Assets/Client/images/logo.png" alt=" " /></a>
                </div>
                <div class="search">
                    <form method="get" action="/search-result">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Your key words" />
                        <input type="submit" value="SEARCH" id="btnSearch" />
                    </form>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="header-bottom-right">
                @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @id = "frm_Logout" }))
                {
                    if (Request.IsAuthenticated) // user has been login successfully
                    {
                        @Html.AntiForgeryToken()
                        <ul class="login">
                            <li><a href="/account/info" id="btnInfo"><span> </span>Hello: @User.Identity.GetUserName()</a></li> |
                            <li><a href="#" id="btnLogout">Logout</a></li>
                        </ul>
                    }
                    else
                    {
                        <ul class="login">
                            <li><a href="/account/login"><span> </span>LOGIN</a></li> |
                            <li><a href="/account/register">SIGNUP</a></li>
                        </ul>
                    }
                }
                <div class="cart"><a href="/cart"><span> </span>CART</a></div>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!--Ending header-->
