@model TeduShopingOnline.Web.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="account_grid">
    <div class="login-right">
        <h3>REGISTERED CUSTOMERS</h3>
        <p>If you have an account with us, please log in.</p>
        @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            <div>
                <span>User Name<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName, new { @id = "txtUserName", @placeholder = "User name" })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "error" })
            </div>

            <div>
                <span>Password<label>*</label></span>
                @Html.PasswordFor(model => model.Password, new { @id = "txtPassword", @placeholder = "Password" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "error" })
            </div>

            <div>
                <span>Remember me<label>*</label></span>
                @Html.CheckBoxFor(model => model.RememberMe, new { @id = "chkRememberMe" })
            </div>

            <a class="forgot" href="/account/forgot-password">Forgot Your Password?</a>
            <input type="submit" value="Login" id="btnLogin" />
        }
    </div>
    <div class="login-left">
        <h3>NEW CUSTOMERS</h3>
        <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
        <a class="acount-btn" href="/account/register">Create an Account</a>
    </div>
    <div class="clearfix"> </div>
</div>