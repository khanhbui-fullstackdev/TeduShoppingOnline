@model TeduShopingOnline.Web.ViewModels.RegisterViewModel
@using BotDetect.Web.Mvc;

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />

@section RegisterJS{
    <link href="~/Scripts/plugins/jquery-ui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Assets/Client/js/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/plugins/jquery-ui/jquery-ui.min.js"></script>

    <script src="~/Scripts/plugins/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/Scripts/plugins/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/Assets/Client/js/controllers/register.js"></script>
}

<div class="register">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id = "frm_registerAccount" }))
    {
        @Html.AntiForgeryToken()
        if (ViewData["SuccessMsg"] != null)
        {
            <div class="alert alert-success" role="alert" id="alert-success">
                <strong>Congratulation! </strong> Wellcome you've registered successfully.
                <br />Please click <a href="/account/login">here</a> to login
            </div>
        }
        <div class="register-top-grid">
            <h3>Your account information</h3>
            <div class="mation">
                <span>First name<label>*</label></span>
                @Html.TextBoxFor(model => model.FirstName, new { @placeholder = "First name", @id = "firstName", @name = "firstName" })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                <span>Last name<label>*</label></span>
                @Html.TextBoxFor(model => model.LastName, new { @placeholder = "Last name", @id = "lastName", @name = "lastName" })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                <span>Identity number<label>*</label></span>
                @Html.TextBoxFor(model => model.IdentityNumber, new { @placeholder = "Identity number", @id = "identityNumber", @name = "identityNumber" })
                @Html.ValidationMessageFor(model => model.IdentityNumber, "", new { @class = "text-danger" })

                <span>Birthday<label>*</label></span>
                @Html.TextBoxFor(model => model.Birthday, new { @id = "birthday-datepicker", @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })

                <span>Email<label>*</label></span>
                @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @id = "email", @name = "email" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                <span>Address<label>*</label></span>
                @Html.TextBoxFor(model => model.Address, new { @placeholder = "Address", @id = "address", @name = "address" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

                <span>Phone number<label>*</label></span>
                @Html.TextBoxFor(model => model.PhoneNumber, new { @placeholder = "Phone number", @id = "phoneNumber", @name = "phoneNumber" })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })

                <span>User name<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName, new { @placeholder = "User name", @id = "userName" })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                <span>Password<label>*</label></span>
                @Html.PasswordFor(model => model.Password, new { @placeholder = "Password" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                <span>Repeat password<label>*</label></span>
                @Html.PasswordFor(model => model.RepeatPassword, new { @placeholder = "Repeat password" })
                @Html.ValidationMessageFor(model => model.RepeatPassword, "", new { @class = "text-danger" })

                <span>CaptchaCode<label>*</label></span>
                @{
                    MvcCaptcha registerCaptcha = new MvcCaptcha("RegisterCaptcha");
                }
                @Html.Captcha(registerCaptcha)
                @Html.TextBox("CaptchaCode")
            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
        <div class="register-but">
            <input type="submit" value="submit" id="btnRegister" />
            <div class="clearfix"> </div>
        </div>
    }
</div>